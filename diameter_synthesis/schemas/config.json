                ".*": {
                    "additionalProperties": false,
                    "description": "These properties can be used to filter features by value",
                    "type": "object",
                    "properties": {
                        "apical": {
                            "type": "number"
                        },
                        "basal": {
                            "type": "number"
                        },
                        "axon": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "models": {
            "description": "The diameter models",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "n_samples": {
            "description": "The number of samples used to build the diameters",
            "type": "integer",
            "minimum": 1
